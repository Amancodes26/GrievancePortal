{
  "type": "object",
  "properties": {
    "rollno": {
      "type": "string",
      "description": "Student roll number (FK to PersonalInfo.rollno)"
    },
    "issueCode": {
      "type": "integer",
      "minimum": 1,
      "description": "Issue code (FK to IssueList.issueCode)"
    },
    "subject": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "Grievance subject/title"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "maxLength": 2000,
      "description": "Detailed description of the grievance"
    },
    "hasAttachments": {
      "type": "boolean",
      "default": false,
      "description": "Whether attachments are included"
    }
  },
  "required": ["rollno", "issueCode", "subject", "description"],
  "additionalProperties": false
}
