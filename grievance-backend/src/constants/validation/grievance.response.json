{
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the tracking response"
    },
    "grievanceId": {
      "type": "string",
      "pattern": "^ISSUE-\\d{6}-\\d{5}$",
      "description": "Grievance ID (FK to Grievance.grievanceId)"
    },
    "responseText": {
      "type": "string",
      "minLength": 10,
      "maxLength": 1000,
      "description": "Admin's response/update message"
    },
    "adminStatus": {
      "type": "string",
      "enum": ["NEW", "PENDING", "REDIRECTED", "RESOLVED", "REJECTED"],
      "description": "Admin workflow status"
    },
    "studentStatus": {
      "type": "string",
      "enum": ["SUBMITTED", "UNDER_REVIEW", "IN_PROGRESS", "RESOLVED", "REJECTED"],
      "description": "Student view status"
    },
    "responseBy": {
      "type": "string",
      "description": "AdminId who provided the update"
    },
    "responseAt": {
      "type": "string",
      "format": "date-time",
      "description": "When this update was made"
    },
    "redirectTo": {
      "type": "string",
      "description": "AdminId if redirected to another admin"
    },
    "redirectFrom": {
      "type": "string",
      "description": "AdminId who redirected this grievance"
    },
    "isRedirect": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a redirect action"
    },
    "hasAttachments": {
      "type": "boolean",
      "default": false,
      "description": "Whether this update has attachments"
    }
  },
  "required": [
    "grievanceId",
    "responseText",
    "adminStatus",
    "studentStatus",
    "responseBy",
    "responseAt",
    "isRedirect",
    "hasAttachments"
  ],
  "additionalProperties": false
}